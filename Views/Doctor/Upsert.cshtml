@model API_Patient_Managerment.Models.DoctorDTO
@{
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
<div class="row gx-3">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="_id" />
                    <div class="row gx-3">
                        <div class="col-xxl-3 col-lg-4 col-sm-6">
                            <div class="mb-3">
                                <label class="form-label" asp-for="firstname">First Name <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="ri-account-circle-line"></i>
                                    </span>
                                    <input type="text" class="form-control" asp-for="firstname" placeholder="Enter First Name" required />
                                </div>
                            </div>
                        </div>
                        <div class="col-xxl-3 col-lg-4 col-sm-6">
                            <div class="mb-3">
                                <label class="form-label" asp-for="lastname">Last Name <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="ri-account-circle-line"></i>
                                    </span>
                                    <input type="text" class="form-control" asp-for="lastname" placeholder="Enter Last Name" required />
                                </div>
                            </div>
                        </div>
                        <div class="col-xxl-3 col-lg-4 col-sm-6">
                            <div class="mb-3">
                                <label class="form-label" asp-for="email">Email ID <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="ri-mail-open-line"></i>
                                    </span>
                                    <input type="email" class="form-control" asp-for="email" placeholder="Enter Email ID" required />
                                </div>
                            </div>
                        </div>
                        <div class="col-xxl-3 col-lg-4 col-sm-6">
                            <div class="mb-3">
                                <label class="form-label" asp-for="dob">Date of Birth <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="ri-calendar-line"></i>
                                    </span>
                                    <input type="date" class="form-control" asp-for="dob" required />
                                </div>
                            </div>
                        </div>
                        <div class="col-xxl-3 col-lg-4 col-sm-6">
                            <div class="mb-3">
                                <label class="form-label" asp-for="specialty">Specialty <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="ri-stethoscope-line"></i>
                                    </span>
                                    <input type="text" class="form-control" asp-for="specialty" placeholder="Enter Specialty" required />
                                </div>
                            </div>
                        </div>
                        <div class="col-xxl-3 col-lg-4 col-sm-6">
                            <div class="mb-3">
                                <label class="form-label" asp-for="phone">Phone Number <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="ri-phone-line"></i>
                                    </span>
                                    <input type="text" class="form-control" asp-for="phone" placeholder="Enter Phone Number" required />
                                </div>
                            </div>
                        </div>
                        <div class="col-xxl-3 col-lg-4 col-sm-6">
                            <div class="mb-3">
                                <label class="form-label" asp-for="address">Address <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="ri-home-line"></i>
                                    </span>
                                    <input type="text" class="form-control" asp-for="address" placeholder="Enter Address" required />
                                </div>
                            </div>
                        </div>
                        <div class="col-xxl-3 col-lg-4 col-sm-6">
                            <div class="mb-3">
                                <label class="form-label" asp-for="image">Profile Image</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="ri-image-line"></i>
                                    </span>
                                    <input type="file" class="form-control" asp-for="image" accept="image/*" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex gap-2 justify-content-end mt-4">
                        <a href="/Doctor/Index" class="btn btn-outline-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">@((Model != null && !string.IsNullOrEmpty(Model._id)) ? "Update Doctor Profile" : "Create Doctor Profile")</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
