@model IEnumerable<API_Patient_Managerment.Models.PatientDTO>
@{
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="row gx-3">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="card-title">Patients List</h5>
                <a href="@Url.Action("Add_patient", "patient")" class="btn btn-primary ms-auto">Add Patient</a>
            </div>
            <div class="card-body">
                <!-- Table starts -->
                <div class="table-responsive">
                    <table id="basicExample" class="table truncate m-0 align-middle">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Patient Name</th>
                                <th>Gender</th>
                                <th>Mobile</th>
                                <th>Email</th>
                                <th>Address</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var patient in Model)
                                {
                                    // Decide on gender badge class based on the gender field.
                                    var genderClass = patient.gender?.ToLower() == "female" ? "bg-warning-subtle text-warning" : "bg-info-subtle text-info";
                                    <tr>
                                        <td>@patient._id</td>
                                        <td>
                                            <!-- Using a default image; replace with patient-specific image if available -->
                                            <img src="assets/images/patient.png" class="img-shadow img-2x rounded-5 me-1" alt="Patient Image">
                                            @patient.firstName @patient.lastName
                                        </td>
                                        <td>
                                            <span class="badge @genderClass">
                                                @patient.gender
                                            </span>
                                        </td>
                                        <!-- Age, Blood Group, and Treatment are not provided by PatientDTO so use placeholders or leave blank -->
                                        <td>@patient.phone</td>
                                        <td>@patient.email</td>
                                        <td>@patient.address</td>
                                        <td>
                                            <div class="d-inline-flex gap-1">
                                                <!-- Delete action triggers modal confirmation -->
                                                <button class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#delRow">
                                                    <i class="ri-delete-bin-line"></i>
                                                </button>
                                                <!-- Edit Patient Details -->
                                                <a href="@Url.Action("Edit", "patient", new { id = patient._id })" class="btn btn-outline-success btn-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit Patient Details">
                                                    <i class="ri-edit-box-line"></i>
                                                </a>
                                                <!-- View Dashboard -->
                                                <a href="@Url.Action("Dashboard", "patient", new { id = patient._id })" class="btn btn-outline-info btn-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="View Dashboard">
                                                    <i class="ri-eye-line"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="10" class="text-center">No patients found.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- Table ends -->
                <!-- Modal Delete Row -->
                <div class="modal fade" id="delRow" tabindex="-1" aria-labelledby="delRowLabel" aria-hidden="true">
                    <div class="modal-dialog modal-sm">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="delRowLabel">Confirm</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to delete the patient?
                            </div>
                            <div class="modal-footer">
                                <div class="d-flex justify-content-end gap-2">
                                    <button class="btn btn-outline-secondary" data-bs-dismiss="modal" aria-label="Close">No</button>
                                    <button class="btn btn-danger" data-bs-dismiss="modal" aria-label="Close">Yes</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div> <!-- end card-body -->
        </div> <!-- end card -->
    </div> <!-- end col-sm-12 -->
</div>
